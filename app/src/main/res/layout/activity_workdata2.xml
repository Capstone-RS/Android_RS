<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/btnBack"
            android:layout_width="40dp"
            android:layout_height="50dp"
            android:textAlignment="center"
            android:textSize="30dp"
            android:textStyle="bold"
            android:textColor="@android:color/black"
            android:text="&lt;"/>

        <TextView
            android:layout_width="351dp"
            android:layout_height="wrap_content"
            android:text="언제 얼마나 일하시나요?"
            android:textAlignment="center"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@android:color/black"/>
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="급여"
        android:textSize="15dp"
        android:textColor="@android:color/black"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="30dp">
        <Spinner
            android:id="@+id/spnPay"
            android:layout_width="130dp"
            android:layout_height="50dp"
            android:spinnerMode="dropdown" />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="0원"
            android:id="@+id/money"
            android:textSize="15dp" />
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="근무 날짜(복수 선택 가능)"
        android:textSize="15dp"
        android:textColor="@android:color/black"/>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="30dp">
        <TextView
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:hint="5월1일 외 3건"
            android:textSize="20dp"
            android:id="@+id/btnWorkDay"
            android:textColor="@android:color/black"/>
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="근무 시간"
        android:textSize="15dp"
        android:textColor="@android:color/black"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="30dp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:hint="AM 9:00"
            android:textSize="20dp"
            android:textAlignment="center"
            android:id="@+id/startTime"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="-"
            android:textSize="30dp"/>
        <TextView
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:hint="PM 6:00"
            android:textSize="20dp"
            android:textAlignment="center"
            android:id="@+id/endTime"/>
    </LinearLayout>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="휴게 시간"
        android:textSize="15dp"
        android:textColor="@android:color/black"/>
    <Spinner
        android:id="@+id/spnRestTime"
        android:layout_width="130dp"
        android:layout_height="50dp"
        android:spinnerMode="dropdown"
        android:layout_marginBottom="20dp"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:text="계산하기"
            android:id="@+id/btnNext"
            android:background="@drawable/button_round_black"
            android:textColor="@android:color/white" />
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="나중에하기"
            android:id="@+id/btnHome"
            android:background="@drawable/button_round_gray"
            android:textColor="@android:color/white"/>
    </LinearLayout>

    </LinearLayout>
</ScrollView>