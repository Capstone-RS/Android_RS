<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp"
    android:layout_margin="16dp"
    android:background="#FFFFFF"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="27dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/cmt_userid_tv"
            android:layout_width="5dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_gravity="center_vertical"
            android:text="익명 1"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/cmt_date_tv"
            android:layout_width="162dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_gravity="center_vertical"
            android:text=" 날짜" />

        <ImageButton
            android:id="@+id/heart_btn"
            android:layout_width="36dp"
            android:layout_height="22dp"
            android:layout_gravity="center_vertical"
            android:background="@null"
            android:src="@mipmap/ic_heart_foreground" />

        <TextView
            android:id="@+id/heart_st"
            android:layout_width="3dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_gravity="center_vertical"
            android:text="숫자" />

        <ImageButton
            android:id="@+id/chat_btn"
            android:layout_width="26dp"
            android:layout_height="24dp"
            android:layout_gravity="center_vertical"
            android:background="@null"
            android:src="@mipmap/ic_chat_foreground" />

        <ImageButton
            android:id="@+id/wjawja_btn"
            android:layout_width="27dp"
            android:layout_height="24dp"
            android:layout_gravity="center_vertical"
            android:background="@null"
            android:src="@mipmap/ic_wjawja_foreground" />
    </LinearLayout>


    <TextView
        android:id="@+id/cmt_content_tv"
        android:layout_width="match_parent"
        android:textColor="#333333"
        android:layout_height="wrap_content"
        android:text="content" />
</LinearLayout>

